
@{
    ViewData["Title"] = "Login";
}


@model TreinoMais.ViewModels.AdministradorViewModel



@{
    ViewData["Title"] = "Faça seu login";
}

        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="collection with-header">

                        <form asp-action="Login">
                            <div class="collection-item">
                                <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                                <div class="row">
                                    <div class="input-field">
                                        <input asp-for="Email" class="validate" id="Email" />
                                        <label for="Email">Email</label>
                                        <span asp-validation-for="Email" class="red-text darken-3"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field">
                                        <input asp-for="Senha" class="validate" id="Senha" />
                                        <label for="Senha">Senha</label>
                                        <span asp-validation-for="Senha" class="red-text darken-3"></span>
                                    </div>
                                </div>
                                <div class="collection-item">
                                    <center><input type="submit" value="Login" class="btn-small teal darken-2" /></center> &nbsp;

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div id="modal1" class="modal">
            <div class="modal-content">
                <h4>Confirmar exclusão</h4>
                <p>Deseja prosseguir com a exclusão de <b class="nome"></b> ?</p>
            </div>
            <div class="modal-footer">
                <a class="modal-close btn green accent-4">Não</a>
                <a class="modal-close btn red accent-4 btnConfirmar">Sim</a>
            </div>
        </div>

